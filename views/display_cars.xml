<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="display_cars" name="Cars">
        <t t-call="website.layout">
            <div class="container">
                <h1 class="car_title">Cars</h1>
                <p id="message_cars">You can find all type of cars.</p>

                <a href="/cars/create"><i class="fa fa-plus-circle"/>Add New Car</a>
                <br/>
                <br/>
                <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Doors Number</th>
                    <th scope="col">Horse Power</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <t t-foreach="cars" t-as="car">       
                <tbody>
                    <tr>
                    <th scope="row"><t t-esc="car.id"/></th>
                    <td><t t-esc="car.name"/></td>
                    <td><t t-esc="car.doors_number"/></td>
                    <td><t t-esc="car.horse_power"/></td>
                    <td>
                        <a t-attf-href="/update?id=#{car.id}"><i class="fa fa-pencil"/></a>
                        <a t-attf-href="/delete?id=#{car.id}"><i class="fa fa-trash"/></a>
                    </td>
                    </tr>
                </tbody>
                </t>
            </table>
            </div>
        </t>
    </template>
</odoo>