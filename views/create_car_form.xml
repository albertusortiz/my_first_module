<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="create_car_form" name="Cars">
        <t t-call="website.layout">
            <div class="container">
                <h2>Cars Form</h2>

                <form action="/create" method="POST">

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <label for="name" class="col-sm-12 col-form-label">Name</label>
                            <input type="text" class="form-control" name="name"/>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <label for="doors_numer" class="col-sm-12 col-form-label">Doors Number</label>
                            <input type="number" class="form-control" name="name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <label for="horse_power" class="col-sm-12 col-form-label">Horse Power</label>
                            <input type="number" class="form-control" name="name"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </t>
    </template>
</odoo>